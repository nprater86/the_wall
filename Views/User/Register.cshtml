@model User;

<h1 class="display-6 mb-5">Register</h1>
<form asp-action="SaveUser" asp-controller="User">
    <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="FirstName"></label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="FirstName">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col">
            <small><span class="text-danger" asp-validation-for="FirstName"></span></small>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="LastName"></label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="LastName">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col">
            <small><span class="text-danger" asp-validation-for="LastName"></span></small>
        </div>
    </div>
        <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="Email"></label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="Email">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col">
            <small><span class="text-danger" asp-validation-for="Email"></span></small>
        </div>
    </div>
        <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="Password"></label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="Password">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col">
            <small><span class="text-danger" asp-validation-for="Password"></span></small>
        </div>
    </div>
        <div class="row">
        <div class="col-3">
            <label class="col-form-label" asp-for="ConfirmPassword"></label>
        </div>
        <div class="col-3">
            <input class="form-control" asp-for="ConfirmPassword">
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col">
            <small><span class="text-danger" asp-validation-for="ConfirmPassword"></span></small>
        </div>
    </div>
    <div class="row">
        <div class="col-6 text-end">
            <input class="btn btn-primary" type="submit" value="Register">
        </div>
    </div>
</form>